{
    "tasks": [
        {
            "type": "shell",
            "label": "build all cpp files",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-std=c++11",
                "-Iinclude",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/greenthumb",
                "-lmingw32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}